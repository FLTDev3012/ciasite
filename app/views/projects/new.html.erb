<div class="dash-new-container">
  <div class="pass-nav-block-noir"></div>
  <div class="dash-new-first">

    <div class="dash-new-title-container">
      <h2 class="text-main-title">ðŸ”¥ Edit project ðŸ”¥</h2>
    </div>

    <div class="dash-new-form-container">
      <%= simple_form_for @project do |f| %>
        <% if @project.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>
            <ul>
              <% @project.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="dash-new-form-div">
          <%= f.input :title, label: "Project Title", placeholder: "Enter the project title" %>
        </div>

        <div class="dash-new-form-div">
          <%= f.input :url, label: "Project URL", placeholder: "Enter the project URL" %>
        </div>

        <div class="dash-new-form-div">
          <%= f.input :description, label: "Project Description", placeholder: "Enter the project DESCRIPTION" %>
        </div>

        <div class="dash-new-form-div">
          <%= f.input :category, label: "Category", collection: ["Hero Banner", "Landing Page", "Showcase Site", "CMS", "E-commerce", "Web Application", "QR Bar & Restaurant"], prompt: "Select a category" %>
        </div>

        <div class="dash-new-photo-div">
          <%= f.input :photo, label: "Project Photo", as: :file %>
        </div>

        <!-- Case Ã  cocher pour "main" -->
        <div class="dash-new-form-div">
          <%= f.input :main, label: "ajouter en main", as: :boolean, checked: @project.main %>
        </div>

        <div class="dash-new-submit-div">
          <%= f.submit "Update Project" %>
        </div>
      <% end %>
    </div>

    <div class="d-flex justify-content-center">
      <div class="link-ligne-rouge-container">
        <div class="link-ligne-rouge-red"></div>
        <%= link_to 'Back to Projects', projects_path, class: 'text-bold', data: { turbo: false } %>
      </div>
    </div>

  </div>
</div>
