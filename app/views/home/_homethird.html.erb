<div class="home-troisieme-div-container">
  <div class="home-troisieme-div-content">

    <%= render "shared/lignesverticales" %>

    <div class="home-trois-container">

      <div class="home-trois-gauche">
        <%= image_tag("styles_site/main_pic.png", class: "home-trois-gauche-logo-img js-home-third-pic ") %>
      </div>

      <div class="home-trois-droite">
        <div class="home-trois-droite-content">

          <h2 class="text-title">My Services</h2>
          <p class="text-bold">Accomplish our mission of creating web solutions with ingenuity and determination, always dedicated to your online success.</p>
          <p class="text-lighty">I offer a range of services, including captivating showcase websites to present your brand, flexible CMS platforms to manage your content effortlessly, and robust e-commerce sites to boost your sales.</p>

          <%= link_to nosservices_path, class: 'btn-rouge js-home-third-button', data: { turbo: false } do %>
            <div class="block-rouge"></div>
            <div class="block-noir-fleche">
              <i class="fa-solid fa-arrow-right" style="color: #fff;"></i>
            </div>
            <div class="block-text">Discover My Services</div>
          <% end %>

        </div>
      </div>

    </div>


  </div>
</div>

<script>

  window.addEventListener('scroll', function() {
      var scrollPosition = window.scrollY;
      var scrollText = document.querySelector('.js-home-third-pic');

      if (scrollPosition > 860) {
        scrollText.classList.add('show');
      } else {
        scrollText.classList.remove('show');
      }

      var scrollText = document.querySelector('.js-home-third-button');

      if (scrollPosition > 1100) {
        scrollText.classList.add('shake');
      } else {
        scrollText.classList.remove('shake');
      }

    });
</script>
