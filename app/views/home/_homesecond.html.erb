<div class="home-seconde-div-container">
  <div class="home-seconde-div-content">
    <div class="home-seconde-content-little">

      <div class="home-seconde-gauche">
        <h2 class="text-title">Unlock Horizons</h2>
      </div>

      <div class="home-seconde-centre">
      </div>

      <div class="home-seconde-droite js-home-seconde-text">
        <p class="text-bold"><%= t('home.homesecond.text1') %></p>
        <p class="text-lighty"><%= t('home.homesecond.text2') %></p>
        <div class="home-seconde-droite-link-container">
          <div class="home-seconde-droite-link-hover-red"></div>
          <%= link_to t('home.homesecond.link_text'), about_path, class: 'text-bold', data: { turbo: false } %>
        </div>
      </div>

    </div>
  </div>
</div>

<script>

  window.addEventListener('scroll', function() {
      var scrollPosition = window.scrollY;
      var scrollText = document.querySelector('.js-home-seconde-text');

      if (scrollPosition > 350) {
        scrollText.classList.add('show');
      } else {
        scrollText.classList.remove('show');
      }

    });
</script>
